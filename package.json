{
  "name": "@lyrafinance/lyra-js",
  "version": "0.0.4",
  "description": "A JavaScript SDK for Optimistic Ethereum and the Lyra Protocol.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "homepage": "www.lyra.finance",
  "author": "Lyra Finance",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyra-finance/lyra-js"
  },
  "scripts": {
    "build": "tsc && yarn copy-files",
    "dev": "yarn build && tsc --watch",
    "script": "env-cmd -f .env.local ts-node --project tsconfig-ts-node.json src/scripts/index.ts",
    "generate-types": "yarn typechain --target ethers-v5 --out-dir src/contracts/typechain src/contracts/abis/*.json",
    "copy-files": "copyfiles -u 1 src/**/*.json dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint '**/*.ts'",
    "clean": "rimraf node_modules dist",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/providers": "^5.5.3",
    "ethers": "^5.5.4",
    "graphql": "^16.4.0",
    "graphql-request": "^4.2.0",
    "mathjs": "^10.4.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^9.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.21",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "copyfiles": "^2.4.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.31.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^10.0.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5",
    "yargs": "^17.3.1"
  },
  "files": [
    "dist"
  ]
}
